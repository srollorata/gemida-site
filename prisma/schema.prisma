generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Enums for stricter typing
enum EventStatus {
  PENDING
  COMPLETED
  CANCELLED
}

enum EventType {
  PLAN
  TIMELINE
  MEMORIAL
  REUNION
  BIRTHDAY
  WEDDING
  GRADUATION
  ACHIEVEMENT
  MILESTONE
  OTHER
}

model FamilyMember {
  id           String        @id @default(cuid())
  name         String
  birthDate    DateTime?     // optional
  weddingDate  DateTime?     // optional
  deathDate    DateTime?     // optional
  profileImage String?
  gender       String?         //
  spouseId     String?       // references another FamilyMember
  spouse       FamilyMember? @relation("SpouseRelation", fields: [spouseId], references: [id], map: "FamilyMember_spouse_fkey")
  spouses      FamilyMember[] @relation("SpouseRelation")
  children     FamilyMember[] @relation("ParentChildRelation")
  parents      FamilyMember[] @relation("ChildParentRelation")
  childOf      FamilyMember[] @relation("ParentChildRelation")
  parentOf     FamilyMember[] @relation("ChildParentRelation")
  biography    String?
  occupation   String?
  location     String?
  isUser       Boolean       @default(false)
  user         User?
  userId       String?       @unique // optional, links to User

  // Relations for parent/child
  parentLinks  ParentChild[] @relation("ChildParent")
  childLinks   ParentChild[] @relation("ParentChild")
  
  // Relations for events and timeline
  eventsParticipated Event[] @relation("EventParticipants")
  timelineEvents     TimelineEvent[] @relation("TimelineFamilyMember")
  timelineRelated    TimelineEvent[] @relation("TimelineRelatedMembers")
}

model ParentChild {
  id             String        @id @default(uuid())
  parentId       String
  childId        String
  parent         FamilyMember  @relation("ParentChild", fields: [parentId], references: [id])
  child          FamilyMember  @relation("ChildParent", fields: [childId], references: [id])
}

model User {
  id             String        @id @default(cuid())
  name           String
  email          String        @unique
  password       String
  role           String
  profileImage   String?
  familyMember   FamilyMember? @relation(fields: [familyMemberId], references: [id])
  familyMemberId String?       @unique
  eventsCreated  Event[]       @relation("EventCreatedBy")
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
}

model Event {
  id           String      @id @default(cuid())
  title        String
  description  String
  date         DateTime
  type         EventType
  status       EventStatus @default(PENDING)
  location     String?
  createdById  String
  createdBy    User        @relation("EventCreatedBy", fields: [createdById], references: [id])
  createdAt    DateTime    @default(now())
  completedAt  DateTime?
  participants FamilyMember[] @relation("EventParticipants")
  photos       String[]    // URLs
  // Optional back-reference to a generated TimelineEvent (one-to-one)
  timelineEntry TimelineEvent? @relation("EventToTimeline")
}

model TimelineEvent {
  id              String      @id @default(cuid())
  title           String
  date            DateTime
  description     String
  type            String
  familyMemberId  String?
  familyMember    FamilyMember? @relation("TimelineFamilyMember", fields: [familyMemberId], references: [id])
  relatedMembers  FamilyMember[] @relation("TimelineRelatedMembers")
  // If this timeline event was created from an Event, keep a reference
  sourceEventId   String?       @unique
  sourceEvent     Event?        @relation("EventToTimeline", fields: [sourceEventId], references: [id])
  isAutoAdded     Boolean       @default(false)
}